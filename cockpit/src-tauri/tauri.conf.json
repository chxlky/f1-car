{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "cockpit",
    "version": "0.1.0",
    "identifier": "io.github.chxlky.cockpit",
    "build": {
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "bun dev",
        "beforeBuildCommand": "bun build"
    },
    "app": {
        "windows": [
            {
                "title": "cockpit",
                "width": 450,
                "height": 900,
                "resizable": false,
                "fullscreen": false,
                "label": "main",
                "additionalBrowserArgs":"--disable-web-security"
            }
        ],
        "security": {
            "csp": "default-src 'self' data:; img-src 'self' data: blob: http://*:8081;"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
